# ==============================
# ğŸš€ Backend Dockerfile (FastAPI + Cloud SQL Proxy + Auto Env Load)
# ==============================

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# ------------------------------
# ğŸ§© System dependencies
# ------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    netcat-openbsd \
 && rm -rf /var/lib/apt/lists/*

# ------------------------------
# ğŸ“¦ Python dependencies
# ------------------------------
COPY legalbot/backend/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# ------------------------------
# ğŸ“ Application code
# ------------------------------
# Copy the full legalbot backend structure
COPY legalbot /app/legalbot

# Copy environment file for local dev (used in config.py)
COPY legalbot/backend/.env.local /app/legalbot/.env.local

# ------------------------------
# ğŸ” Cloud SQL Auth Proxy (latest stable v2)
# ------------------------------
RUN curl -fsSL -o /cloud-sql-proxy \
    https://storage.googleapis.com/cloud-sql-connectors/cloud-sql-proxy/v2.10.0/cloud-sql-proxy.linux.amd64 && \
    chmod +x /cloud-sql-proxy

# ------------------------------
# ğŸ§  Startup script
# ------------------------------
COPY legalbot/backend/start_backend.sh /app/start_backend.sh
RUN chmod +x /app/start_backend.sh

# ------------------------------
# âš™ï¸ Environment setup
# ------------------------------
ENV PYTHONPATH=/app
EXPOSE 8705

# ------------------------------
# ğŸš€ Entrypoint
# ------------------------------
ENTRYPOINT ["/app/start_backend.sh"]
