# Step 1: Build stage
FROM node:20-alpine AS build
WORKDIR /app
COPY legalbot/web /app
RUN npm install && npm run build

# Step 2: Serve via NGINX
FROM nginx:1.25-alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Expose port
EXPOSE 80

# Start NGINX
CMD ["nginx", "-g", "daemon off;"]
